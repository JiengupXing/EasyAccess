<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff">
        <TextView
            android:id="@+id/teamwork_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Title"
            android:layout_alignParentTop="true"
            android:textStyle="bold"
            android:textColor="#000000"
            android:padding="5dp">
        </TextView>
        <LinearLayout
            android:id="@+id/layout_price"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="#ffffff">
            <LinearLayout
                android:id="@+id/layout_title"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageView
                    android:id="@+id/teamwork_head"
                    app:srcCompat="@drawable/head_portrait"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>

                <LinearLayout
                    android:paddingLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="#ffffff">

                    <TextView
                        android:textColor="#000000"
                        android:id="@+id/teamwork_username"
                        android:textSize="15sp"
                        android:text="1158677160"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_marginTop="3dp"
                        android:id="@+id/teamwork_pubtime"
                        android:textSize="12sp"
                        android:text="发布于XXX"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d2d2d2"/>

        <TextView
            android:layout_width="match_parent"
            android:gravity="left"
            android:text="项目描述"
            android:padding="20dp"
            android:textColor="#000000"
            android:background="#ffffff"
            android:textSize="20dp"
            android:layout_height="wrap_content"/>



        <TextView
            android:id="@+id/teamwork_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textStyle="bold">
        </TextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d2d2d2"/>

        <TextView
            android:layout_width="match_parent"
            android:gravity="left"
            android:text="联系方式"
            android:padding="20dp"
            android:textColor="#000000"
            android:background="#ffffff"
            android:textSize="20dp"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                app:srcCompat="@drawable/ic_tel">
            </ImageView>
            <TextView
                android:id="@+id/teamwork_tel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="13995697434"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:gravity="center">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                app:srcCompat="@drawable/ic_address">
            </ImageView>
            <TextView
                android:id="@+id/teamwork_email"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="418729092@qq.com"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:gravity="center">
            </TextView>
        </LinearLayout>
    </LinearLayout>





    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:background="#00000000"
            android:drawableTop="@drawable/ic_phone"
            android:id="@+id/btn_to_tel"
            android:text="拨打电话"
            android:textColor="#8a8a8a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <Button
            android:layout_toRightOf="@id/btn_to_tel"
            android:background="#00000000"
            android:drawableTop="@drawable/ic_email"
            android:id="@+id/btn_to_mail"
            android:text="发送邮件"
            android:textColor="#8a8a8a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</RelativeLayout>